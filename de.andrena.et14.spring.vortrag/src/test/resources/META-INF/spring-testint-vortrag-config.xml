<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="konferenzClient"
		class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="http://localhost:8080/remoting/IKonferenzService-httpinvoker" />
		<property name="serviceInterface" value="de.andrena.et14.spring.konferenz.IKonferenzService" />
	</bean>
	
	<bean id="vortragClient"
		class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="http://localhost:8080/remoting/IVortragService-httpinvoker" />
		<property name="serviceInterface" value="de.andrena.et14.spring.vortrag.IVortragService" />
	</bean>


</beans>